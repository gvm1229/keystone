---
/**
 * 랜딩 페이지 - 메인
 */
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Keystone - 포트폴리오 & 기술 블로그">
    <section class="max-w-3xl mx-auto text-center py-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white mb-6">
            Keystone
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
            포트폴리오와 기술 블로그가 함께하는 공간입니다.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
            <a
                href="/portfolio"
                class="px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors"
            >
                Portfolio 보기
            </a>
            <a
                href="/blog"
                class="px-6 py-3 border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800 font-medium rounded-lg transition-colors"
            >
                Blog 보기
            </a>
        </div>
    </section>
</BaseLayout>
