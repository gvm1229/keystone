---
/**
 * 헤더 컴포넌트
 * - 사이트 타이틀 Keystone
 * - 네비게이션: About me, Resume, Portfolio, Blog
 * - GitHub 링크
 * - 다크모드 토글 (light/dark/system)
 */
import ThemeToggle from "./ThemeToggle";
---

<header class="sticky top-0 z-50 border-b border-(--color-border) bg-(--color-surface) backdrop-blur-sm">
    <nav class="container mx-auto px-4 py-4 flex items-center justify-between gap-4">
        {/* 사이트 타이틀 */}
        <a href="/" class="text-xl font-bold text-(--color-foreground) hover:opacity-80 transition-opacity">
            Keystone
        </a>

        {/* 네비게이션 버튼들 */}
        <div class="flex items-center gap-2 sm:gap-4">
            <a
                href="/about"
                class="px-3 py-2 text-sm font-medium text-(--color-muted) hover:text-(--color-foreground) rounded-md hover:opacity-80 transition-colors"
            >
                About me
            </a>
            <a
                href="/resume"
                class="px-3 py-2 text-sm font-medium text-(--color-muted) hover:text-(--color-foreground) rounded-md hover:opacity-80 transition-colors"
            >
                Resume
            </a>
            <a
                href="/portfolio"
                class="px-3 py-2 text-sm font-medium text-(--color-muted) hover:text-(--color-foreground) rounded-md hover:opacity-80 transition-colors"
            >
                Portfolio
            </a>
            <a
                href="/blog"
                class="px-3 py-2 text-sm font-medium text-(--color-muted) hover:text-(--color-foreground) rounded-md hover:opacity-80 transition-colors"
            >
                Blog
            </a>

            {/* GitHub 아이콘 링크 */}
            <a
                href="https://github.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 text-(--color-muted) hover:text-(--color-foreground) rounded-md hover:opacity-80 transition-colors"
                aria-label="GitHub"
            >
                <svg
                    class="w-5 h-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                >
                    <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"
                    />
                </svg>
            </a>

            {/* 다크모드 토글 - 클라이언트에서만 동작 */}
            <ThemeToggle client:load />
        </div>
    </nav>
</header>
