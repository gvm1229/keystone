{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Portfolio",
    "description": "포트폴리오 프로젝트 목록 (개인 연락처/이력서 정보 제외)",
    "type": "object",
    "required": ["projects"],
    "properties": {
        "projects": {
            "type": "array",
            "description": "프로젝트 목록",
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "description",
                    "startDate",
                    "endDate",
                    "goal",
                    "role",
                    "teamSize",
                    "accomplishments",
                    "keywords",
                    "github"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "프로젝트 제목"
                    },
                    "description": {
                        "type": "string",
                        "description": "프로젝트 설명"
                    },
                    "startDate": {
                        "type": "string",
                        "format": "date",
                        "description": "프로젝트 시작일 (YYYY-MM-DD)"
                    },
                    "endDate": {
                        "type": "string",
                        "format": "date",
                        "description": "프로젝트 종료일 (YYYY-MM-DD)"
                    },
                    "goal": {
                        "type": "string",
                        "description": "프로젝트 목표"
                    },
                    "role": {
                        "type": "string",
                        "description": "내 역할"
                    },
                    "teamSize": {
                        "type": "integer",
                        "minimum": 1,
                        "description": "프로젝트 참여 인원 수"
                    },
                    "accomplishments": {
                        "type": "array",
                        "items": { "type": "string" },
                        "description": "성과/달성 사항"
                    },
                    "keywords": {
                        "type": "array",
                        "items": { "type": "string" },
                        "description": "기술 키워드/태그"
                    },
                    "github": {
                        "type": "string",
                        "format": "uri",
                        "description": "GitHub 저장소 링크"
                    }
                }
            }
        }
    }
}
